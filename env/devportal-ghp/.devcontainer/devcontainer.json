// More info: https://containers.dev/implementors/json_reference/
{
	"image": "mcr.microsoft.com/devcontainers/javascript-node:0-18",
	//"image": "mcr.microsoft.com/devcontainers/universal:2.1.3-focal",
	"features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/lukewiwa/features/shellcheck:0": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/sshd:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"mads-hartmann.bash-ide-vscode",
				"dbaeumer.vscode-eslint",
				"ms-vscode-remote.vscode-remote-extensionpack",
				"ms-vscode.remote-explorer",
				"ms-vscode-remote.remote-ssh-edit",
				"ms-vscode.remote-server",
				"ms-vscode-remote.remote-containers",
				"ms-azuretools.vscode-azurecontainerapps",
				"ms-azuretools.vscode-docker",
				"GoogleCloudTools.cloudcode",
				"MioszMurgrabia.convert-to-container",
				"yzhang.vscode-markdown-container",
				"TimHeuer.dotnet-containerizer",
				"LiveContainerMonitoring.container-monitoring-extension",
				"pulumi.pulumi-vscode-tools",
				"pulumi.pulumi-lsp-client",
				"pulumi.pulumi-vscode-copilot",
				"ankitbko.vscode-pull-request-azdo",
				"ms-vscode.notepadplusplus-keybindings",
				"ms-dotnettools.vscode-dotnet-runtime"
			]
		}
	},
	//"postCreateCommand": "/bin/bash -ex ./.devcontainer/setup.sh > postCreateCommand.log"
    "postCreateCommand": "npm install -g @devcontainers/cli"
}
